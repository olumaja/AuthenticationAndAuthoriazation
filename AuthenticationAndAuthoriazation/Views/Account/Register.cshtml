@model RegistrationViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="d-flex justify-content-center align-items-center" style="height:90vh">
    <div class="border rounded col-4 pt-4 pb-4">
        <h1 class="mb-3 text-center" style="text-align:center">Register here!</h1>
        <form method="post" asp-action="Register" asp-controller="Account">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group m-4">
                <div><label asp-for=FirstName>First Name</label></div>
                <div><input asp-for=FirstName placeholder="First Name" class="form-control" /></div>
                <span class="text-danger" asp-validation-for="FirstName"></span>
            </div>
            <div class="form-group m-4">
                <div><label asp-for=LastName>Last Name</label></div>
                <div><input asp-for=LastName placeholder="Last Name" class="form-control" /></div>
                <span class="text-danger" asp-validation-for="LastName"></span>
            </div>
            <div class="form-group m-4">
                <div><label asp-for=Email>Email</label></div>
                <div><input asp-for=Email placeholder="Email" class="form-control" /></div>
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="form-group row m-4">
                <div class="col-2"><label asp-for=Gender>Gender</label></div>
                <div class="col-6"><select name="Gender" asp-items=Model.Options></select></div>
                <span class="text-danger" asp-validation-for="Gender"></span>
            </div>
            <div class="form-group m-4">
                <div><label asp-for=Password>Password</label></div>
                <div><input asp-for=Password placeholder="Password" class="form-control" /></div>
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="form-group m-4">
                <div><label asp-for=ConfirmPassword>Confirm Password</label></div>
                <div><input asp-for=ConfirmPassword placeholder="Confirm Password" class="form-control" /></div>
                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
            </div>
            <hr />
            <partial name="_SignInSingUpPartialView" />
            <div class="m-auto" style="width:30%"><input type="submit" value="Register" class="btn btn-primary btn-lg form-control" /></div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

