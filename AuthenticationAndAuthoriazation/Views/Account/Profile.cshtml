@model ProfileViewModel
@{
    ViewData["Title"] = "Profile";
    var pics = "~/images/profileImages/" + Model.Photo;
}

<div class="d-flex justify-content-center align-items-center" style="height:70vh">
    <div class="d-flex justify-justify-content-sm-between col-5 rounded p-4" style="min-height:300px; width: 50%">
        <div class="col-6 p-2" style="border-right: thin #000 solid">
            <div class="mb-3" style="width:150px; height: 150px; border-radius:50%; overflow: hidden;">
                <img src="@pics" asp-append-version=true style="width:100%" />
            </div>
            <form asp-action="UploadProfile" asp-controller="Account" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Email" class="form-control" />
                <input asp-for="UploadPhoto" accept="image/*" class="form-control mb-2" />
                @if (!String.IsNullOrWhiteSpace(ViewBag.ErrorMessage))
                {
                    <div class="text-danger"><small>@ViewBag.ErrorMessage</small></div>
                }
                <button type="submit" class="btn btn-primary">Upload</button>
            </form>
        </div>
        <div class="col-6 p-2">
            <h1>Hi @Model.FullName</h1>
        </div>
    </div>
    
</div>

