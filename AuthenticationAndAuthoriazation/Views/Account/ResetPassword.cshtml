@model ResetPasswordViewModel;
@{
    ViewData["Title"] = "ResetPassword";
}

<div class="d-flex justify-content-center align-items-center" style="height:70vh">
    <div class="border rounded col-4 pt-4 pb-4">
        <h1 class="mb-3 text-center" style="text-align:center">Reset Password here!</h1>
        <form method="post" asp-action="ResetPassword" asp-controller="Account">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (!string.IsNullOrWhiteSpace(ViewBag.ErrorMessage))
            {
                <div class="text-danger">@ViewBag.ErrorMessage</div>
            }
            @if (!string.IsNullOrWhiteSpace(ViewBag.SuccessMessage))
            {
                <div class="text-success">@ViewBag.SuccessMessage</div>
            }
            <div class="form-group m-4">
                <input asp-for=Email type="hidden" class="form-control" />
                <input asp-for=Token type="hidden" class="form-control" />
            </div>
            <div class="form-group m-4">
                <div><label asp-for=Password>Password</label></div>
                <div><input asp-for=Password placeholder="New Password" class="form-control" /></div>
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group m-4">
                <div><label asp-for=ConfirmPassowrd>Password</label></div>
                <div><input asp-for=ConfirmPassowrd placeholder="Confirm passowrd" class="form-control" /></div>
                <span asp-validation-for="ConfirmPassowrd"></span>
            </div>
            <div class="m-auto" style="width:30%"><input type="submit" value="Submit" class="btn btn-primary btn-lg form-control" /></div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

