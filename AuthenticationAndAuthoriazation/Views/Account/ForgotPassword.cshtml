@model ForgotPasswordViewModel

@{
    ViewData["Title"] = "Login Page";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    var message = !String.IsNullOrWhiteSpace(ViewBag.Message) ? ViewBag.Message : "";
}

<div class="d-flex justify-content-center align-items-center" style="height:70vh">
    <div class="border rounded col-4 pt-4 pb-4">
        <h1 class="mb-3 text-center" style="text-align:center">Reset Password here!</h1>
        <form method="post" asp-action="ForgotPassword" asp-controller="Account">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (!String.IsNullOrWhiteSpace(message))
            {
                <div class="text-success">@message</div>
            }
            <div class="form-group m-4">
                <div><label asp-for=Email>Email</label></div>
                <div><input asp-for=Email placeholder="Email" class="form-control" /></div>
                <span asp-validation-for="Email"></span>
            </div>
            <div class="m-auto" style="width:30%"><input type="submit" value="Submit" class="btn btn-primary btn-lg form-control" /></div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}